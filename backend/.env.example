# Application Configuration
APP_NAME=BGAofis
APP_ENV=production
APP_DEBUG=false
APP_URL=https://bgaofis.example.com

# Timezone
APP_TIMEZONE=Europe/Istanbul

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=bgaofis
DB_USERNAME=bgaofis_user
DB_PASSWORD=strong_password_here

# JWT / Auth Configuration
JWT_SECRET=change_this_to_a_long_random_string

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mail.bgaofis.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@bgaofis.com
MAIL_PASSWORD=mail_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@bgaofis.com
MAIL_FROM_NAME="${APP_NAME}"

# Logs Configuration
LOG_CHANNEL=daily

# File uploads Configuration
FILES_UPLOAD_PATH=/home/username/bgaofis/uploads
BACKUP_PATH=/home/username/bgaofis/backups

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_LIFETIME=120

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_EXPIRE=60
